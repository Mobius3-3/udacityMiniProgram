
.temp{
  text-align:center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
} 
.discription{
 
  text-align:center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.56;
} 

.wrapper{
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
  /* background-color: rgb(241, 208, 146); */
}

.location-wrapper{
  position: absolute;
  left: 250rpx;
  top: 24rpx;
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)!important;
  border: none!important;
  padding: 0!important;
}
 .location{
  display: flex;
  justify-content: center;
  align-items: center;
}
 .location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}
 .location-tips{
  margin-top:10rpx;
  text-align: center;
  width: 240rpx
}

.bgPic{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}
 .temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}
 .arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

.timetips{
  display: flex;
  justify-content: center;
  align-items: center; 
  margin-top: 40rpx;
  margin-bottom: 40rpx
}

.timetips-icon{
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx
}

.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  
}

.forecast-list{
  display: flex;
}

.forecast-item{
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 120rpx;
  align-items: center
}

.forecast-time{
  font-size: 30rpx;
  line-height: 42rpx
}

.forecast-weather{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx
  }

.forecast-temp{
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx
}

